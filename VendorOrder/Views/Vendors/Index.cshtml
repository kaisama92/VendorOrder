@{
  Layout = "_Layout";
}

@using VendorOrder.Models

<h1>Vendors</h1>
@if (Model.Count == 0)
{
  <p>There are no Vendors available to display.</p>
}
else
{
  <h2>Here are your current vendors</h2>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
  }
</ul>
<h4><a href='/vendors/new'>Click here to add a vendor</a></h4>
